<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mHeaderLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/headerTitleTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="喜领直播"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/headerLeftTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:background="#DCB982"
            android:minWidth="45dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/headerLeftIv"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="start|center_vertical"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/headerRightTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:minWidth="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/headerRightIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:minWidth="45dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <View
            android:id="@+id/rightAnchor"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="13dp" />
    </FrameLayout>


</LinearLayout>