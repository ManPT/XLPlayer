<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="0dp"
            android:background="@color/mainColor"
            android:gravity="center"
            android:text="立即付款"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_need_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="410."
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_24" />


            <TextView
                android:id="@+id/tv_need_price_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f5"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:minHeight="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_11"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_63"
            android:background="@mipmap/icon_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btnAddAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加地址收货地址"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivDefault"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@drawable/icon_default"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_24"
            android:text="山东省青岛市市北区"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/ivDefault"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAddressDetails"
            android:layout_width="@dimen/dp_268"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:ellipsize="end"
            android:lines="2"
            android:text="龙城路31号卓越世纪中心1号楼2609室左手上电梯直达"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/ivDefault"
            app:layout_constraintTop_toBottomOf="@id/ivDefault" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:paddingBottom="@dimen/dp_23"
            android:text="王涛"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/tvAddressDetails"
            app:layout_constraintTop_toBottomOf="@id/tvAddressDetails" />

        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_22"
            android:text="183****8517"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/tvUserName"
            app:layout_constraintTop_toBottomOf="@id/tvAddressDetails" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/bg_line"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conShopInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_117"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/conAddress">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="#ff0000"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="@dimen/dp_196"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="2"
            android:text="FANCL 芳珂 GABA 氨基丁酸压力缓解营养丸 30日量 30粒"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toRightOf="@id/ivIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShopDescribe"
            android:layout_width="@dimen/dp_196"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:lines="1"
            android:text="藕粉三盒包装"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@id/tvShopName"
            app:layout_constraintTop_toBottomOf="@id/tvShopName" />


        <TextView
            android:id="@+id/tvRMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="¥"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tvShopName" />

        <TextView
            android:id="@+id/tvDiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="372."
            android:textColor="#ffa6251a"
            android:textSize="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvRMB" />

        <TextView
            android:id="@+id/tvDiscountPriceDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_9"
            android:text="51"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvDiscountPrice" />

        <TextView
            android:id="@+id/tvCrossedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_9"
            android:text="¥ 506.00 "
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvDiscountPriceDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="x 1"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/conShopInfo"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品货款"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_19"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1356.00"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_15"
            />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@color/color_f5"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_marginTop="@dimen/dp_19"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+¥15.00"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_15"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
